<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.YoutubeVideoPlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoPlay="true"
            app:enableAutomaticInitialization="false"
            app:videoId="S0Q4gqBUs7c" />

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/youtube_player_view"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/full_video_btn"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:text="Full Video"/>

            <Button
                android:id="@+id/subscribe_btn"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:text="Subscribe"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/sugesstion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Next Video"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggestion_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/youtube_suggestion_video_item" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/ad_slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/image_ad_banner"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_height="70dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>