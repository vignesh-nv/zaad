<resources xmlns:tools="http://schemas.android.com/tools" xmlns:ns1="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.Zaad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorButtonNormal">@android:color/holo_red_light</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionBarTheme">@style/ToolbarStyle</item>
<!--        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>-->
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="color">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="color">@color/white</item>
    </style>

    <style name="FullScreen" parent="Theme.Zaad">
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize25Percent" parent="">
        <item name="cornerSize">25%</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Zaad.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Zaad.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Zaad.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.MaterialAboutActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.MaterialAboutActivity.Light.DarkActionBar.CustomCardView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">#ffffff</item>
    </style>

<!--    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">-->
<!--&lt;!&ndash;        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>&ndash;&gt;-->
<!--        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Message.Text</item>-->
<!--    </style>-->

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyText</item>
    </style>

    <style name="BodyText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/light_white</item>
        <item name="android:textAppearance">@macro/m3_comp_dialog_supporting_text_type</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/twitter_blue</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Material3</item>
        <item name="android:windowElevation" ns1:ignore="NewApi">@dimen/m3_alert_dialog_elevation</item>
        <item name="android:checkedTextViewStyle" ns1:ignore="NewApi">@style/Widget.Material3.CheckedTextView</item>
        <item name="buttonBarButtonStyle">@style/Widget.Material3.Button.TextButton.Dialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Material3.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Material3.Button.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.Material3.Button.TextButton.Dialog.Flush</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/MaterialAlertDialog.Material3.Title.Panel</item>
        <item name="materialAlertDialogTitleIconStyle">@style/MaterialAlertDialog.Material3.Title.Icon</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Material3.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Material3.Body.Text</item>
        <item name="android:windowAnimationStyle">@style/MaterialAlertDialog.Material3.Animation</item>
    </style>

<!--    <style name="MaterialAlertDialog.App.Message.Text" parent="MaterialAlertDialog.Material3.Title.Text">-->
<!--        <item name="android:textColor">@color/light_white</item>-->
<!--    </style>-->
    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/twitter_blue</item>
    </style>
</resources>